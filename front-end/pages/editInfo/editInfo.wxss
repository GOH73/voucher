/* pages/editInfo/editInfo.wxss */

.user-info {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  background-color: #00A9BA;
  border-bottom-left-radius: 33px;
  border-bottom-right-radius: 33px;
}

.transparent-container {
  background-color: rgba(223, 210, 210, 0.5);
  padding: 20rpx;
  border-radius: 18px;
  min-height: 400rpx;
}

.form-item {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
}

.label {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  display: block;
}

.input {
  border-bottom: 1px solid #eee;
  padding: 20rpx 0;
  font-size: 28rpx;
}

.save-btn {
  margin-top: 40rpx;
  background-color: #00A9BA !important;
}