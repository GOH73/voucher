/* pages/handover/handover.wxss */

.button-container {
  padding: 40rpx;
  display: flex;
  gap: 30rpx;
  flex: 1;
  height: 100rpx;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s;
}

.dialog-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
}

.dialog-content {
  width: 80%;
  background-color: white;
  border-radius: 16rpx;
  padding: 40rpx;
}

.dialog-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
}

.dialog-buttons {
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
}

.dialog-buttons button {
  width: 40%;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background-color: #00A9BA;
  color: white;
}

.user-info {
  background-color: #00A9BA;
  border-bottom-left-radius: 33px;
  border-bottom-right-radius: 33px;
}

.transparent-container {
  background-color: rgba(223, 210, 210, 0.5);
  padding: 30rpx;
  border-radius: 18px;
}

.basket-info {
  background-color: white;
  padding: 30rpx;
  border-radius: 16rpx;
}

.detail-row {
  margin-bottom: 20rpx;
  padding: 15rpx 0;
  border-bottom: 1px solid #eee;
}

.label {
  color: #666;
  width: 180rpx;
  display: inline-block;
}

.content {
  color: #333;
  font-weight: 500;
}

.status-card {
  margin-top: 40rpx;
  padding: 30rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
}

.status-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.status-desc {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.primary-btn {
  background-color: #00A9BA;
  color: white;
  border-radius: 8rpx;
  width: 80%;
}

.form-item {
  margin: 30rpx 0;
}

.picker-label {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 10rpx;
  display: block;
}

.picker-content {
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.picker {
  width: 100%;
  padding: 10rpx;
  margin-top: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 15rpx;
  box-sizing: border-box;
}
